{
    "designSystemName": "Friendly Modern Web",
    "version": "1.0",
    "description": "A design system characterized by a clean layout, vibrant primary color, rounded corners, and soft shadows. It aims to be friendly, modern, and highly legible, suitable for consumer-facing web applications and marketing pages.",
    "palette": {
      "primary": {
        "main": {
          "value": "#0077FF",
          "description": "A vibrant, welcoming blue used for primary calls-to-action, hero sections, and key highlights."
        },
        "light": {
          "value": "#F0F7FF",
          "description": "A very light, almost pastel blue for subtle backgrounds and highlighted card sections."
        }
      },
      "accent": {
        "yellow": {
          "value": "#FFF9E6",
          "description": "A soft, pale yellow for testimonial cards or secondary highlights."
        },
        "purple": {
          "value": "#F4F1FF",
          "description": "A light lavender for testimonial cards or secondary highlights."
        },
        "green": {
          "value": "#E6FCF5",
          "description": "A gentle mint green for testimonial cards or secondary highlights."
        }
      },
      "text": {
        "primary": {
          "value": "#0D1C2E",
          "description": "Dark navy/off-black for headings and primary text for maximum contrast on light backgrounds."
        },
        "secondary": {
          "value": "#5A6B7F",
          "description": "A muted gray for body copy, descriptions, and secondary information."
        },
        "onPrimary": {
          "value": "#FFFFFF",
          "description": "White text for use on the primary color background."
        }
      },
      "neutral": {
        "white": {
          "value": "#FFFFFF",
          "description": "The primary background color for most sections, providing a clean and open feel."
        },
        "lightGray": {
          "value": "#EFEFEF",
          "description": "A light gray for borders, dividers, and subtle backgrounds."
        }
      }
    },
    "typography": {
      "fontFamily": {
        "primary": {
          "value": "'Inter', 'Helvetica Neue', sans-serif",
          "description": "A clean, geometric, and highly legible sans-serif font."
        }
      },
      "hierarchy": {
        "display": {
          "fontSize": "3.5rem",
          "fontWeight": 700,
          "lineHeight": 1.2
        },
        "h1": {
          "fontSize": "2.75rem",
          "fontWeight": 700,
          "lineHeight": 1.25
        },
        "h2": {
          "fontSize": "2rem",
          "fontWeight": 700,
          "lineHeight": 1.3
        },
        "h3": {
          "fontSize": "1.5rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "caption": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "lineHeight": 1.5
        }
      }
    },
    "layout": {
      "container": {
        "maxWidth": "1140px",
        "horizontalPadding": "24px"
      },
      "spacingScale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "48px",
        "xxl": "96px"
      },
      "sectionPadding": {
        "vertical": "96px",
        "horizontal": "24px"
      }
    },
    "effects": {
      "borderRadius": {
        "medium": "8px",
        "large": "16px",
        "xlarge": "24px",
        "full": "9999px"
      },
      "boxShadow": {
        "soft": "0px 4px 20px rgba(0, 0, 0, 0.05)",
        "medium": "0px 8px 30px rgba(0, 0, 0, 0.1)"
      }
    },
    "components": {
      "button": {
        "baseStyle": {
          "padding": "16px 32px",
          "borderRadius": "9999px",
          "fontWeight": 600,
          "fontSize": "1rem",
          "border": "2px solid transparent",
          "transition": "all 0.3s ease"
        },
        "variants": {
          "primary": {
            "backgroundColor": "palette.primary.main",
            "color": "palette.text.onPrimary"
          },
          "secondary": {
            "backgroundColor": "palette.neutral.white",
            "color": "palette.primary.main",
            "borderColor": "palette.primary.main"
          }
        }
      },
      "card": {
        "baseStyle": {
          "borderRadius": "effects.borderRadius.xlarge",
          "padding": "layout.spacingScale.lg",
          "boxShadow": "effects.boxShadow.soft",
          "backgroundColor": "palette.neutral.white"
        },
        "variants": {
          "highlight": {
            "backgroundColor": "palette.primary.light"
          },
          "testimonial": {
            "description": "Uses accent colors for background, e.g., palette.accent.yellow."
          }
        }
      },
      "avatar": {
        "style": {
          "borderRadius": "effects.borderRadius.full",
          "width": "48px",
          "height": "48px"
        }
      },
      "icon": {
        "style": "Minimalist, often two-toned or line-based, sometimes contained within a rounded shape.",
        "sizes": {
          "sm": "16px",
          "md": "24px",
          "lg": "32px"
        }
      },
      "decorativeElements": {
        "scribbleUnderline": {
          "description": "A hand-drawn or wavy underline effect placed under key words in a heading to add personality.",
          "color": "palette.primary.main"
        }
      }
    }
  }
  